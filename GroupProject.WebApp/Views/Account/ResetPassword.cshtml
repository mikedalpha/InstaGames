@model GroupProject.WebApp.Models.AccountViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-7 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4 class="text-center">Reset your password</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Code)
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "text-primary" })

                                    @Html.EditorFor(m => m.Email, new { @class = "form-control mb-0", autocomplete = "off", placeholder = "Email" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "text-primary" })

                                    @Html.EditorFor(m => m.Password, new { @class = "form-control mb-0", autocomplete = "off", placeholder = "Password" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-primary" })

                                    @Html.EditorFor(m => m.ConfirmPassword, new { @class = "form-control mb-0", autocomplete = "off", placeholder = "Confirm Password" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-hover my-2">Reset</button>
                                </div>
                            </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
