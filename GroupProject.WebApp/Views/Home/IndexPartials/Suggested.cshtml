@using Microsoft.AspNet.Identity
@model GroupProject.WebApp.Models.HomeViewModel.IndexViewModel

<section id="iq-suggestede" class="s-margin">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 overflow-hidden">
                <div class="iq-main-header d-flex align-items-center justify-content-between">
                    <h4 class="main-title">Suggested For You</h4>
                    <a class="iq-view-all" href="~/game/singleplayer">View All</a>
                </div>
                <div class="suggestede-contens">
                    <ul class="list-inline favorites-slider row p-0 mb-0">
                        @foreach (var game in Model.LatestGames)
                        {
                            <li class="slide-item">
                                <div class="block-images position-relative">
                                    <div class="img-box">
                                        <img src="@game.Photo" class="img-fluid" alt="game photo">
                                    </div>
                                    <div class="block-description">
                                        <h6 class="iq-title"><a class="detailsView" data-id="@game.GameId" href="#">@game.Title</a></h6>
                                        <div class="movie-time d-flex align-items-center my-2">
                                            <img src="@game.Pegi.PegiPhoto" alt="Alternate Text" class="p-2 " width="50" />
                                        </div>
                                        <div class="hover-buttons">
                                            <a href="~/game/play/@game.GameId" class="btn btn-hover iq-button">
                                                <i class="fa fa-play mr-1" aria-hidden="true"></i>
                                                Play Now
                                            </a>
                                        </div>
                                    </div>
                                    <div class="block-social-info">
                                        <ul class="list-inline p-0 m-0 music-play-lists">
                                            <li class="share">
                                            @if (@Model.RatedGames.Any(g => g.ApplicationUserId == User.Identity.GetUserId() && g.GameId == game.GameId))
                                            {
                                                <span><i class="ri-star-fill"></i></span>
                                                <div class="share-box">
                                                    <div data-id="@game.GameId" class="d-flex align-items-center">
                                                        <i class="btn-link fa fa-star-o" value="1"></i>
                                                        <i class="btn-link fa fa-star-o" value="2"></i>
                                                        <i class="btn-link fa fa-star-o" value="3"></i>
                                                        <i class="btn-link fa fa-star-o" value="4"></i>
                                                        <i class="btn-link fa fa-star-o" value="5"></i>
                                                    </div>
                                                </div>
                                                <span class="count-box">@Model.RatedGames.Where(g => g.ApplicationUserId == User.Identity.GetUserId() && g.GameId == game.GameId).Select(g => g.Rating).First()</span>
                                            }
                                            else
                                            {
                                                <span><i class="ri-star-fill"></i></span>
                                                <div class="share-box">
                                                    <div class="d-flex align-items-center">
                                                        <i data-id="@game.GameId" class="addRating btn-link fa fa-star-o" value="1"></i>
                                                        <i data-id="@game.GameId" class="addRating btn-link fa fa-star-o" value="2"></i>
                                                        <i data-id="@game.GameId" class="addRating btn-link fa fa-star-o" value="3"></i>
                                                        <i data-id="@game.GameId" class="addRating btn-link fa fa-star-o" value="4"></i>
                                                        <i data-id="@game.GameId" class="addRating btn-link fa fa-star-o" value="5"></i>
                                                    </div>
                                                </div>
                                            }
                                            </li>
                                            <li>
                                                @if (@Model.MyList.Any(g => g.GameId == game.GameId))
                                                {
                                                    <span data-id="@game.GameId" class="addToList mylist"  style="--text:'Remove from My List'"><i class="fa fa-check-circle-o"></i></span>
                                                }
                                                else
                                                {
                                                    <span data-id="@game.GameId" class="addToList mylist" style="--text:'Add to My List'"><i class="ri-add-line"></i></span>
                                                }
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
