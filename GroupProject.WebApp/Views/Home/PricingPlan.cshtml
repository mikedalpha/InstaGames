@using GroupProject.Entities
@model GroupProject.WebApp.Models.HomeViewModel.PricingPlanViewModel

@{
    ViewBag.Title = "Pricing Plan – InstaGames";
}

<!-- loader Start -->
<div id="loading">
    <div id="loading-center">
    </div>
</div>
<!-- loader END -->

<div class="iq-breadcrumb-one  iq-bg-over iq-over-dark-50" style=" background-image: url(/Content/images/about-us/about.jpeg);">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-sm-12">
                <nav aria-label="breadcrumb" class="text-center iq-breadcrumb-two">
                    <h2 class="title">Pricing Plan</h2>
                    <ol class="breadcrumb main-bg">
                        <li class="breadcrumb-item"><a href="~/home/index">Home</a></li>
                        <li class="breadcrumb-item active">Pricing Plan</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<main id="main" class="site-main">
    <div class="container">
        <h3 class="title text-primary text-center mb-3">Subscribe Now! And get unlimited play time !</h3>
        <div class="row">
            <div class="col-lg-12 col-sm-12">

                <div class="iq-pricing-card">
                    <div class="table-responsive iq-pricing pt-2">
                        <table id="my-table" class="table" data-active="premium">
                            <thead>
                            <tr>
                                <th class="text-center text-primary iq-price-head">Choose your plan</th>

                                <th id="prem" class="text-center iq-price-head premium">
                                    <div class="iq-price-box active">
                                        <h3 class="iq-price-rate text-white">€39<small> / 3 Months</small></h3>
                                        <span class="type">Premium</span>
                                    </div>
                                </th>
                                <th id="bas" class="text-center iq-price-head basic">
                                    <div class="iq-price-box">
                                        <h3 class="iq-price-rate text-white">€19<small> / Month</small></h3>
                                        <span class="type">Basic</span>
                                    </div>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th class="text-center text-secondary" scope="row"> Ad Free Entertainment</th>
                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center text-secondary" scope="row"> InstaGames Single Player </th>

                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center text-secondary" scope="row"> InstaGames Multi Player</th>

                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center text-secondary" scope="row"> Third Party Games Single Player</th>

                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center text-secondary" scope="row">Third Party Games Multi Player</th>

                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-times-circle"></i>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center text-secondary" scope="row"> Insta Games Special</th>

                                <td class="text-center iq-child-cell active">
                                    <i class="fa fa-check-circle"></i>
                                </td>
                                <td class="text-center iq-child-cell">
                                    <i class="fa fa-times-circle"></i>
                                </td>
                            </tr>
                            @using (@Html.BeginForm("SubscriptionPlan", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <tr style="display: none">
                                    @*<th class="text-center iq-price-footer text-secondary">Choose your plan</th>*@
                                    <td class="text-center iq-price-footer active">
                                        <div class="container">
                                            <div class="align-items-center r-mb-23 " data-animation-in="fadeInUp" data-delay-in="1.3" style="margin-right: 30px">
                                                <div class="form-group">
                                                    @Html.RadioButtonFor(vm => vm.SubscribePlan, Plan.Premium, new { @class = "form-control", style = "width:35px; display:none;", @checked = true, id = "radioChoice1" })
                                                    <br />
                                                    @Html.ValidationMessageFor(vm => vm.SubscribePlan, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center iq-price-footer active">
                                        <div class="container form-group">
                                            <div class="align-items-center r-mb-23" data-animation-in="fadeInUp" data-delay-in="1.3">
                                                <div class="form-group">
                                                    @Html.RadioButtonFor(vm => vm.SubscribePlan, Plan.Basic, new { @class = "form-control", style = "width:35px; display:none;", id = "radioChoice" })
                                                    <br />
                                                    @Html.ValidationMessageFor(vm => vm.SubscribePlan, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td colspan="1" class="text-center iq-price-footer">
                                        <button type="submit" class="btn btn-hover text-center my-2">Subscribe</button>
                                    </td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
